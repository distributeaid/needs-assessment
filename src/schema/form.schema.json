{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://distributeaid.github.io/needs-assessment/form.schema.json",
  "title": "Distribute Aid Needs Assesment Form Schema",
  "description": "Describes the JSON document which decribes needs assessment forms.",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "URL to the JSON schema in use",
      "type": "string",
      "format": "url"
    },
    "sections": {
      "description": "Describes the form's sections",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://distributeaid.github.io/needs-assessment/section.schema.json"
      },
      "uniqueItemProperties": ["id", "title"]
    }
  },
  "additionalProperties": false,
  "required": ["$schema", "sections"]
}
